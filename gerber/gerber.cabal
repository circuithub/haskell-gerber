name:                gerber
version:             0.2.0.0
license:             MIT
license-file:        LICENSE
author:              Oliver Charles
maintainer:          ollie@ocharles.org.uk
category:            Data
build-type:          Simple
extra-source-files:  README.md, ChangeLog.md
cabal-version:       >= 2.0

library
  exposed-modules:     Gerber.ApertureDefinition
                       Gerber.Command
                       Gerber.DCodeNumber
                       Gerber.EncodedDecimal
                       Gerber.Evaluate
                       Gerber.Evaluate.Edge
                       Gerber.Evaluate.GraphicsState
                       Gerber.Evaluate.GraphicsState.InterpolationMode
                       Gerber.Flash
                       Gerber.Format
                       Gerber.Grammar
                       Gerber.Movement
                       Gerber.Padding
                       Gerber.Polarity
                       Gerber.StepRepeat
                       Gerber.Unit
  build-depends:       base ^>= 4.13
                     , megaparsec ^>= 7.0
                     , text >=1.2 && <1.3
                     , generic-deriving
                     , containers
                     , monoid-extras
                     , foldl
  hs-source-dirs:      lib
  default-language:    Haskell2010
  ghc-options:         -Wall
